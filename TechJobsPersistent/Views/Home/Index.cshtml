@{
    ViewData["Title"] = "Home Page";
}

@model List<TechJobsPersistent.Models.Job>

<div class="text-center">
    <h1 class="display-4">Welcome to TechJobs!</h1>
    <p><a asp-controller="Home" asp-action="Add">Add Jobs</a></p>
    <p><a asp-controller="List" asp-action="Index">List Jobs</a></p>
    <p><a asp-controller="Search" asp-action="Index">Search Jobs</a></p>
    <p><a asp-controller="Employer" asp-action="Add">Add Employer</a></p>
</div>

@if (Model.Count == 0)
{
    <p>No Jobs, yet...</p>
}
else
{
    <table class="table">
        <tr>
            <th>Position Name</th>
            <th>Employer</th>
            <th>Location</th>
            <th>Skill</th>
        </tr>
        @foreach (var job in Model)
        {
    <tr>
        
        <td><a asp-controller="Home" asp-action="Detail" asp-route-id="@job.Id">@job.Name</a></td>
        <td>@job.Employer.Name</td>
        <td>@job.Employer.Location</td>
        <td>@job.EmployerId</td>


    </tr>
    }

    </table>
}